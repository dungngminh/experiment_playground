<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/forward"
        motion:constraintSetEnd="@+id/next"
        motion:constraintSetStart="@id/start"
        motion:duration="300">

        <OnSwipe
            motion:dragDirection="dragStart"
            motion:maxAcceleration="300"
            motion:touchAnchorSide="start" />
    </Transition>

    <Transition
        android:id="@+id/backward"
        motion:constraintSetEnd="@+id/previous"
        motion:constraintSetStart="@id/start"
        motion:duration="300">
        <OnSwipe
            motion:dragDirection="dragEnd"
            motion:maxAcceleration="300"
            motion:touchAnchorSide="end" />
    </Transition>

    <ConstraintSet android:id="@+id/previous">

        <Constraint
            android:id="@+id/card5"
            android:layout_width="0dp"
            android:layout_height="205dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="80dp"
            android:rotation="14"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintDimensionRatio="2:3"
            motion:layout_constraintStart_toEndOf="@id/card4"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/card4"
            android:layout_width="0dp"
            android:layout_height="238dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:rotation="7"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintDimensionRatio="2:3"
            motion:layout_constraintStart_toEndOf="@+id/card3"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/card3"
            android:layout_width="0dp"
            android:layout_height="264dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintDimensionRatio="2:3"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/card2"
            android:layout_width="0dp"
            android:layout_height="238dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="60dp"
            android:rotation="-7"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintDimensionRatio="2:3"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/card1"
            android:layout_width="0dp"
            android:layout_height="205dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="40dp"
            android:rotation="-14"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintDimensionRatio="2:3"
            motion:layout_constraintEnd_toStartOf="@id/card2"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/start" />

    <ConstraintSet android:id="@+id/next">

        <Constraint
            android:id="@+id/card1"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="40dp"
            android:rotation="-21"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintDimensionRatio="2:3"
            motion:layout_constraintEnd_toStartOf="@id/card2"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/card5"
            android:layout_width="0dp"
            android:layout_height="238dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:rotation="7"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintDimensionRatio="2:3"
            motion:layout_constraintStart_toEndOf="@id/card4"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/card4"
            android:layout_width="0dp"
            android:layout_height="264dp"
            android:rotation="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintDimensionRatio="2:3"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/card3"
            android:layout_width="0dp"
            android:layout_height="238dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintDimensionRatio="2:3"
            motion:layout_constraintEnd_toStartOf="@+id/card4"
            motion:layout_constraintTop_toTopOf="parent"
            android:rotation="-7"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="40dp" />
        <Constraint
            android:id="@+id/card2"
            android:layout_width="0dp"
            android:layout_height="205dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="40dp"
            android:rotation="-14"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintDimensionRatio="2:3"
            motion:layout_constraintEnd_toStartOf="@+id/card3"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
</MotionScene>